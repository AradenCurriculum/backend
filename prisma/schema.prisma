// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  username       String          @unique
  password       String
  email          String
  role           String          @default("user")
  registerTime   DateTime        @default(now())
  loginTime      DateTime        @default(now())
  inviteCodes    InviteCode[]    @relation("Owner") // 由该用户创建的邀请码
  sendInvitation ContactInvite[] @relation("sent")
  recvInvitation ContactInvite[] @relation("received")
}

model InviteCode {
  id      Int     @id @default(autoincrement())
  code    String  @unique @default(uuid())
  owner   User    @relation("Owner", fields: [ownerId], references: [id])
  ownerId String
  role    String  @default("user")
  used    String?
}

model Contact {
  id        Int    @id @default(autoincrement())
  user_id   String
  friend_id String
}

model ContactInvite {
  id      Int    @id @default(autoincrement())
  from_id String @unique
  from    User   @relation("sent", fields: [from_id], references: [id])
  to_id   String @unique
  to      User   @relation("received", fields: [to_id], references: [id])
  status  String
}
